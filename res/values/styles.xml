<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:custom="http://schemas.android.com/apk/res/com.custom.project">

    <!--Общие-->
    <style name="Text" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/min_padding</item>
        <item name="android:paddingRight">@dimen/min_padding</item>
        <item name="android:paddingLeft">@dimen/min_padding</item>
        <item name="android:paddingBottom">@dimen/min_padding</item>
    </style>

    <style name="Aggregator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/min_padding</item>
        <item name="android:paddingRight">@dimen/min_padding</item>
        <item name="android:paddingLeft">@dimen/min_padding</item>
        <item name="android:paddingBottom">@dimen/min_padding</item>
    </style>

    <style name="HSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/min_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_separator_margin</item>
        <item name="android:layout_marginRight">@dimen/default_separator_margin</item>
        <item name="android:background">@color/default_separator_color</item>
    </style>

    <!--Боковое меню-->
    <style name="LeftMenuButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/activated_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/left_menu_button_text</item>
        <item name="android:textSize">@dimen/left_menu_button_text_size</item>
    </style>

    <!--Верхняя панелька-->
    <style name="MyTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/left_menu_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/left_menu_button_text_size</item>
    </style>

  <!--Цели-->

    <style name="GoalsText" parent="Text">
         <item name="android:textSize">@dimen/primary_text_size</item>
         <item name="android:textColor">@color/goals_text_color</item>
    </style>

    <style name="SimpleEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_padding</item>
        <item name="android:layout_marginRight">@dimen/edit_text_padding</item>
        <item name="android:textColor">@color/goal_item_title_text_color</item>
        <item name="android:minHeight">@dimen/edit_text_min_height</item>
    </style>
    
    <style name="SimpleEditText.Picker">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Text.AddGoal">
        <item name="android:layout_marginLeft">@dimen/edit_text_padding</item>
        <item name="android:layout_marginRight">@dimen/edit_text_padding</item>
        <item name="android:textColor">@color/addgoal_text</item>
    </style>

    <style name="Text.NotesForGoalTitle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/goals_text_color</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_padding</item>
        <item name="android:layout_marginRight">@dimen/edit_text_padding</item>
    </style>


</resources>